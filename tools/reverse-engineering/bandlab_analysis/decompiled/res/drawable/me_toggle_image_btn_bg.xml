<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="?android:colorControlHighlight"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/mask">
        <shape android:shape="oval">
            <solid android:color="@color/technical_black_mask" />
        </shape>
    </item>
    <item>
        <selector>
            <item android:state_activated="true">
                <shape android:shape="oval">
                    <solid android:color="@color/surface_interactive_primaryRested" />
                </shape>
            </item>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/technical_unspecified" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>