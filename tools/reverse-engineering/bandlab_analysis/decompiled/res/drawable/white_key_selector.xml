<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true">
        <shape>
            <solid android:color="@color/tint_green_base" />
            <padding android:left="@dimen/grid_size_eighth" android:right="@dimen/grid_size_eighth" />
            <corners android:bottomLeftRadius="@dimen/grid_size_half" android:bottomRightRadius="@dimen/grid_size_half" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <padding android:left="@dimen/grid_size_eighth" android:right="@dimen/grid_size_eighth" />
            <solid android:color="@color/technical_unspecified" />
            <corners android:bottomLeftRadius="@dimen/grid_size_half" android:bottomRightRadius="@dimen/grid_size_half" />
            <stroke android:width="@dimen/grid_size_eighth" android:color="@color/border_neutral" />
        </shape>
    </item>
    <item>
        <shape>
            <padding android:left="@dimen/grid_size_eighth" android:right="@dimen/grid_size_eighth" />
            <solid android:color="@color/surface_interactive_primaryRested" />
            <corners android:bottomLeftRadius="@dimen/grid_size_half" android:bottomRightRadius="@dimen/grid_size_half" />
        </shape>
    </item>
</selector>