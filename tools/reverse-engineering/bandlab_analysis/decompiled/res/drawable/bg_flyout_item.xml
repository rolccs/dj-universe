<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="?android:colorControlHighlight"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/mask" android:drawable="@color/technical_black_mask">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/grid_size" />
            <solid android:drawable="@color/technical_black_mask" />
        </shape>
    </item>
    <item>
        <selector>
            <item android:state_activated="true">
                <shape android:shape="rectangle">
                    <padding android:left="@dimen/grid_size" android:right="@dimen/grid_size" />
                    <corners android:radius="@dimen/grid_size_half" />
                    <solid android:color="@color/surface_interactive_tertiaryRested" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>