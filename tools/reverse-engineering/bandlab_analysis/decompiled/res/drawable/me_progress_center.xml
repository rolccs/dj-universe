<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="@color/border_neutral" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <selector>
                <item android:state_enabled="false">
                    <shape>
                        <solid android:color="@color/glyphs_secondary" />
                    </shape>
                </item>
                <item>
                    <shape>
                        <solid android:color="@color/tint_blue_base" />
                    </shape>
                </item>
            </selector>
        </clip>
    </item>
</layer-list>