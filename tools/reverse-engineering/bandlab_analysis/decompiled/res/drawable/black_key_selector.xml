<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true">
        <shape>
            <solid android:color="@color/tint_green_50" />
            <corners android:bottomLeftRadius="@dimen/grid_size_half" android:bottomRightRadius="@dimen/grid_size_half" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/surface_inactive_contrast" />
            <corners android:bottomLeftRadius="@dimen/grid_size_half" android:bottomRightRadius="@dimen/grid_size_half" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/surface_inactive_screen" />
            <corners android:bottomLeftRadius="@dimen/grid_size_half" android:bottomRightRadius="@dimen/grid_size_half" />
        </shape>
    </item>
</selector>