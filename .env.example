# DJ Universe - Environment Configuration Template
# Copy this file to .env and fill in your values

# ====================================
# NODE ENVIRONMENT
# ====================================
NODE_ENV=development

# ====================================
# DATABASE CONFIGURATION
# ====================================
# PostgreSQL
POSTGRES_DB=dj_universe
POSTGRES_USER=dj_user
POSTGRES_PASSWORD=your_secure_postgres_password
DATABASE_URL=postgresql://dj_user:your_password@localhost:5432/dj_universe

# MongoDB
MONGODB_DB=dj_universe
MONGODB_USER=dj_admin
MONGODB_PASSWORD=your_secure_mongo_password
MONGODB_URL=mongodb://dj_admin:your_password@localhost:27017/dj_universe

# Redis
REDIS_PASSWORD=your_secure_redis_password
REDIS_URL=redis://:your_password@localhost:6379

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200

# InfluxDB
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your_influxdb_token
INFLUXDB_PASSWORD=your_influxdb_password

# ====================================
# APPLICATION URLS
# ====================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8001
NEXT_PUBLIC_CDN_URL=http://localhost:9000

API_URL=http://localhost:8000
WEBSOCKET_URL=ws://localhost:8001
AI_SERVICE_URL=http://localhost:8002

# ====================================
# SECURITY & AUTHENTICATION
# ====================================
JWT_SECRET=your_very_secure_jwt_secret_min_32_chars
JWT_REFRESH_SECRET=your_very_secure_refresh_secret_min_32_chars
SESSION_SECRET=your_very_secure_session_secret
ENCRYPTION_KEY=your_32_character_encryption_key_

# ====================================
# EXTERNAL SERVICES
# ====================================
# Email Service
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@djuniverse.app

# Cloud Storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-west-2
AWS_S3_BUCKET=dj-universe-audio-storage

# OAuth Providers
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# Payment Processing
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# ====================================
# AUDIO CONFIGURATION
# ====================================
AUDIO_UPLOAD_PATH=./uploads/audio
MAX_TRACK_SIZE=50MB
AUDIO_SAMPLE_RATE=44100
AUDIO_BITRATE=320
AUDIO_PROCESSING_WORKERS=4

# ====================================
# AI CONFIGURATION
# ====================================
MODEL_CACHE_PATH=./models
AI_PROCESSING_WORKERS=2
OPENAI_API_KEY=your_openai_api_key

# ====================================
# FEATURE FLAGS
# ====================================
ENABLE_AI_JUDGE=true
ENABLE_REAL_TIME_ANALYSIS=true
ENABLE_BATTLE_RECORDING=true
ENABLE_NDI_STREAMING=false
ENABLE_DEBUG_MODE=false

# ====================================
# BATTLE CONFIGURATION
# ====================================
MAX_BATTLE_PARTICIPANTS=8
BATTLE_ROUND_DURATION=180
BATTLE_PREP_TIME=30

# ====================================
# PERFORMANCE & MONITORING
# ====================================
LOG_LEVEL=info
ENABLE_METRICS=true
METRICS_PORT=9090
API_RATE_LIMIT=100
WEBSOCKET_RATE_LIMIT=1000

# Grafana
GRAFANA_PASSWORD=admin

# MinIO
MINIO_ROOT_USER=dj_admin
MINIO_ROOT_PASSWORD=your_secure_minio_password

# ====================================
# DEVELOPMENT SETTINGS
# ====================================
HOT_RELOAD=true
WATCH_FILES=true
ENABLE_DEVTOOLS=true
MOCK_AI_RESPONSES=false

# ====================================
# PRODUCTION SETTINGS
# ====================================
DOMAIN_NAME=djuniverse.app
FORCE_HTTPS=true
ENABLE_SECURITY_HEADERS=true

# ====================================
# CONTAINER CONFIGURATION
# ====================================
DOCKER_REGISTRY=ghcr.io/dj-universe
K8S_NAMESPACE=dj-universe-prod