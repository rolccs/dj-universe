# DJ UNIVERSE - Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://djuniverse:djuniverse_pass_2025@localhost:5432/dj_universe
MONGODB_URL=mongodb://djuniverse:djuniverse_mongo_2025@localhost:27017/dj_universe_audio
REDIS_URL=redis://localhost:6379
ELASTICSEARCH_URL=http://localhost:9200

# JWT Security
JWT_SECRET=dj_universe_jwt_secret_2025_production_CHANGE_THIS

# Google Drive Integration (Required for streaming service)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Beatport Link Integration (Optional - Professional DJs)
BEATPORT_API_KEY=your_beatport_api_key_here
BEATPORT_API_SECRET=your_beatport_api_secret_here

# TIDAL Integration (Optional - High Quality Streaming)
TIDAL_API_KEY=your_tidal_api_key_here
TIDAL_API_SECRET=your_tidal_api_secret_here

# SoundCloud Integration (Optional - Underground Music)
SOUNDCLOUD_CLIENT_ID=your_soundcloud_client_id_here
SOUNDCLOUD_CLIENT_SECRET=your_soundcloud_client_secret_here

# Application URLs
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=ws://localhost:3001
NEXT_PUBLIC_AUDIO_ENGINE_URL=http://localhost:3002
NEXT_PUBLIC_AI_SERVICE_URL=http://localhost:3003

# Service Ports
API_PORT=3001
AUDIO_ENGINE_PORT=3002
AI_SERVICE_PORT=3003
WEB_PORT=3000

# Audio Engine Configuration
AUDIO_SAMPLE_RATE=48000
AUDIO_BUFFER_SIZE=256
AUDIO_MAX_LATENCY_MS=5

# AI Model Configuration
AI_MODELS_PATH=/app/models
AI_INFERENCE_TIMEOUT=10000
AI_BATCH_SIZE=32

# Battle System Configuration
BATTLE_MAX_PARTICIPANTS=8
BATTLE_SUBMISSION_TIME_LIMIT=300
BATTLE_MAX_ROOMS_PER_SERVER=1000

# File Upload Configuration
MAX_FILE_SIZE_MB=50
UPLOAD_DIRECTORY=/app/uploads
TEMP_DIRECTORY=/app/temp

# Security Configuration
CORS_ORIGIN=http://localhost:3000
SESSION_SECRET=dj_universe_session_secret_CHANGE_THIS
BCRYPT_ROUNDS=12

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_METRICS=true
METRICS_PORT=9090

# Production vs Development
NODE_ENV=development

# Optional: Cloud Storage (Production)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-west-2
# AWS_S3_BUCKET=dj-universe-production

# Optional: Email Service
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# Optional: Analytics
# GOOGLE_ANALYTICS_ID=GA-XXXX-X
# MIXPANEL_TOKEN=your_mixpanel_token

# Optional: Error Tracking
# SENTRY_DSN=your_sentry_dsn_here